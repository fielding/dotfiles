# use # to comment

# Mode definitions with JankyBorders color feedback + Sketchybar
:: default : borders active_color=0xffff0074; sketchybar --trigger mode_change MODE=default
:: switcher @ : borders active_color=0xff6bffb8; sketchybar --trigger mode_change MODE=switcher
:: swap @ : borders active_color=0xff5ce1ff; sketchybar --trigger mode_change MODE=swap
:: tree @ : borders active_color=0xffffb86c; sketchybar --trigger mode_change MODE=tree
:: layout @ : borders active_color=0xffbd93f9; sketchybar --trigger mode_change MODE=layout
:: meet @ : borders active_color=0xffff5555; sketchybar --trigger mode_change MODE=meet


# =====================================================
# QUICK ACTIONS (no mode required)
# =====================================================
alt - e : yabai -m space --balance                # equalize/balance windows
alt - r : yabai -m space --rotate 90              # rotate layout
alt - f : yabai -m window --toggle zoom-fullscreen
alt - t : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

# =====================================================
# NAVIGATION
# =====================================================
# streamline window/pane movement keybinds for vim splits and windows
ctrl - h -> : if [[ "$(yabai -m query --windows --window)" != *"VIM"* ]]; then yabai -m window --focus west; fi
ctrl - j -> : if [[ "$(yabai -m query --windows --window)" != *"VIM"* ]]; then yabai -m window --focus south; fi
ctrl - k -> : if [[ "$(yabai -m query --windows --window)" != *"VIM"* ]]; then yabai -m window --focus north; fi
ctrl - l -> : if [[ "$(yabai -m query --windows --window)" != *"VIM"* ]]; then yabai -m window --focus east; fi

# not sure if the following is implemented in yabai
#ctrl - 0x2A -> : if [[ "$(yabai -m query --windows --window)" != *"VIM"* ]]; then yabai -m window --focus prev; fi

# switching modes
default                        < ctrl - f      ; switcher
switcher, swap, layout, tree   < ctrl - f      ; default
switcher, swap, layout, tree   < escape        ; default

# meet mode - ctrl+m to enter/exit
default                              < ctrl - m      ; meet
meet                                 < ctrl - m      ; default
meet                                 < escape        ; default


# switcher mode

## switch modes (mnemonic keys)
switcher < m ; swap      # m = Move
switcher < l ; layout    # l = Layout
switcher < s ; tree      # s = Size
switcher < g ; meet      # g = Google Meet

## launch iterm
switcher < return : ~/bin/ghostty-create-window; skhd -k 'escape'

## move window to desktop and follow
switcher < cmd + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
switcher < cmd + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
switcher < cmd + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
switcher < cmd + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
switcher < cmd + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
switcher < cmd + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
switcher < cmd + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7
switcher < cmd + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8
switcher < cmd + shift - 9 : yabai -m window --space 9; yabai -m space --focus 9


## move window to desktop
switcher < shift - 1 : yabai -m window --space 1; sketchybar --trigger keybind_flash ACTION="→ 1"
switcher < shift - 2 : yabai -m window --space 2; sketchybar --trigger keybind_flash ACTION="→ 2"
switcher < shift - 3 : yabai -m window --space 3; sketchybar --trigger keybind_flash ACTION="→ 3"
switcher < shift - 4 : yabai -m window --space 4; sketchybar --trigger keybind_flash ACTION="→ 4"
switcher < shift - 5 : yabai -m window --space 5; sketchybar --trigger keybind_flash ACTION="→ 5"
switcher < shift - 6 : yabai -m window --space 6; sketchybar --trigger keybind_flash ACTION="→ 6"
switcher < shift - 7 : yabai -m window --space 7; sketchybar --trigger keybind_flash ACTION="→ 7"
switcher < shift - 8 : yabai -m window --space 8; sketchybar --trigger keybind_flash ACTION="→ 8"
switcher < shift - 9 : yabai -m window --space 9; sketchybar --trigger keybind_flash ACTION="→ 9"

## scatter windows across spaces (for spreading out tiled windows)
switcher < d : for win in $(yabai -m query --windows --space | jq '.[].id'); do \
    yabai -m window "$win" --space $((RANDOM % 9 + 1)); done; \
    sketchybar --trigger keybind_flash ACTION="scatter"; skhd -k 'escape'

## focus monitor
switcher < x : yabai -m display --focus last; sketchybar --trigger keybind_flash ACTION="mon last"
switcher < z : yabai -m display --focus prev; sketchybar --trigger keybind_flash ACTION="mon prev"
switcher < c : yabai -m display --focus next; sketchybar --trigger keybind_flash ACTION="mon next"
switcher < 1 : yabai -m display --focus 1
switcher < 2 : yabai -m display --focus 2

## send to monitor and follow focus
switcher < cmd - x : yabai -m window --display last; yabai -m display --focus last
switcher < cmd - z : yabai -m window --display prev; yabai -m display --focus prev
switcher < cmd - c : yabai -m window --display next; yabai -m display --focus next
switcher < cmd - 1 : yabai -m window --display 1; yabai -m display --focus 1
switcher < cmd - 2 : yabai -m window --display 2; yabai -m display --focus 2

# swap mode
## swap window positions
swap < h : yabai -m window --swap west
swap < j : yabai -m window --swap south
swap < k : yabai -m window --swap north
swap < l : yabai -m window --swap east

## move window
swap < shift - h : yabai -m window --warp west
swap < shift - j : yabai -m window --warp south
swap < shift - k : yabai -m window --warp north
swap < shift - l : yabai -m window --warp east

## mirror tree y-axis
swap < y : yabai -m space --mirror y-axis

## mirror tree x-axis
swap < x : yabai -m space --mirror x-axis

## stack operations
swap < s : yabai -m window --stack next
swap < tab : yabai -m window --focus stack.next || yabai -m window --focus stack.first
swap < shift - s : yabai -m window --toggle stack

# layout mode
## change desktop layout
layout < a : yabai -m space --layout bsp
layout < s : yabai -m space --layout monocle # not implemented yet?
layout < d : yabai -m space --layout float

## toggle desktop offset
layout < o : yabai -m space --toggle padding; yabai -m space --toggle ga

# tree mode
tree < f                :   yabai -m window --toggle zoom-fullscreen
tree < shift - f        :   yabai -m window --toggle native-fullscreen
tree < d                :   yabai -m window --toggle zoom-parent
tree < w                :   yabai -m window --toggle float;\
                            yabai -m window --grid 4:4:1:1:2:2
tree < r                :   yabai -m space --rotate 90
tree < s                :   yabai -m window --toggle split

## adjust window size
tree < h                :   yabai -m window --resize left:-20:0
tree < j                :   yabai -m window --resize bottom:0:20
tree < k                :   yabai -m window --resize top:0:-20
tree < l                :   yabai -m window --resize right:20:0

tree < shift - h        :   yabai -m window --resize left:20:0
tree < shift - j        :   yabai -m window --resize bottom:0:-20
tree < shift - k        :   yabai -m window --resize top:0:20
tree < shift - l        :   yabai -m window --resize right:-20:0

## balance size of windows
tree < e                :   yabai -m space --balance

## pip-style window (top right corner)
tree < p                :   yabai -m window --toggle float; yabai -m window --grid 5:5:3:0:2:2


