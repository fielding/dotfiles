[alias]
  # Show the diff between the latest commit and the current state
  d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  # `git di $number` shows the diff between the state `$number` revisions ago and the current state
  di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"
  # remove branches that have already been merged
  dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
  l = log --pretty=oneline --graph --abbrev-commit --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  s = status -s
  c = commit
  co = checkout
	quick-stats = ! /usr/local/bin/git-quick-stats
[apply]
  whitespace = fix
[branch]
  autosetupmerge = true
[color]
  ui = auto
[color "branch"]
  current = "#bbff00" bold
  local = "#f8f6f2"
  remote = "#04b372"
  upstream = "#1ad0d6"
[color "diff"]
  meta = "#9871fe"
  frag = "#1ad0d6"
  context = "#828079"
  old = "#e7349c"
  new = "#04b372"
  oldMoved = "#d68c6f"
  newMoved = "#91cbcd"
  whitespace = "#e7349c" reverse
[color "status"]
  added = "#04b372"
  changed = "#f2a633"
  untracked = "#5a5d62"
  deleted = "#e7349c"
  branch = "#bbff00" bold
[color "decorate"]
  HEAD = "#e7349c" bold
  branch = "#bbff00" bold
  remoteBranch = "#04b372"
  tag = "#f2a633"
[core]
  excludesfile = ~/.gitignore.global
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space
  pager = delta
[credential]
  helper = osxkeychain
[github]
	user = fielding
[push]
	default = simple
[user]
	name = Fielding Johnston
	email = fielding@justfielding.com
	signingKey = ""
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[init]
	templatedir = ~/.git-templates
[pager]
	# diff = diff-so-fancy | less --tabs=4 -RFX
  # show = diff-so-fancy | less --tabs=4 -RFX
[commit]
	gpgSign = false
	template = /Users/fielding/.git-commit-template
[secrets]
	providers = git secrets --aws-provider
	patterns = [A-Z0-9]{20}
	patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
	patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
	allowed = AKIAIOSFODNN7EXAMPLE
	allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
[url "git@github.com:"]
	insteadOf = https://github.com/

# This next lines include Netlify's Git Credential Helper configuration in your Git configuration.
[include]
  path = /Users/fielding/.netlify/helper/git-config
[tag]
	forceSignAnnotated = false
[hub]
	protocol = https
[merge]
tool = unityyamlmerge

[mergetool "unityyamlmerge"]
trustExitCode = false
cmd = '/Applications/Unity/Unity.app/Contents/Tools/UnityYAMLMerge' merge -p "$BASE" "$REMOTE" "$LOCAL" "$MERGED"
[gpg]
	format = ssh
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  dark = true
  syntax-theme = Human++
  line-numbers = true
  side-by-side = false
  file-style = bold "#f8f6f2"
  file-decoration-style = none
  hunk-header-style = file line-number
  hunk-header-decoration-style = "#3a3d42" box
  line-numbers-left-style = "#5a5d62"
  line-numbers-right-style = "#5a5d62"
  line-numbers-minus-style = "#e7349c"
  line-numbers-plus-style = "#04b372"
  line-numbers-zero-style = "#5a5d62"
  minus-style = syntax "#e7349c20"
  minus-emph-style = syntax "#e7349c40"
  plus-style = syntax "#04b37220"
  plus-emph-style = syntax "#04b37240"
  whitespace-error-style = "#e7349c" reverse
  blame-palette = "#1a1c22" "#282b31" "#3a3d42"
