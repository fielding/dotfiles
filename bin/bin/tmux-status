#!/bin/sh
# edited by Fielding Johnston to work on os x

# Source Human++ palette (generated from palette.toml)
. "$HOME/src/hack/human-plus-plus/dist/tmux/colors.sh"

FULL=▓
EMPTY=░
EOL=▒
SIZE=7
C0="$HMPP_BG"
C1="$HMPP_BG_ELEVATION"
C2="$HMPP_CYAN"
C3="$HMPP_PINK"
C4="$HMPP_BG_ELEVATION"
C5="$HMPP_FG"
C6="$HMPP_CYAN"
C7="$HMPP_CYAN"

draw()
{
	perc=$1
	SIZE=$2
	inc=$(( perc * SIZE / 100 ))
	out=
	for v in `seq 0 $(( SIZE - 1 ))`; do
		test "$v" -le "$inc"   \
		&& out="${out}#[fg=$C1]${FULL}" \
		|| out="${out}#[fg=$C1]${EMPTY}"
	done
	echo $out
}
temp()
{
  temp=$(istats cpu temp | awk '{print int($3)}')
  echo $temp"°C"
}
bat()
{
  status=$(pmset -g batt | awk -F '; *' 'NR==2 { print $2 }')
	bat_perc=$(pmset -g batt | awk 'NR==2 { gsub(/;/,""); print $2 }')

  case $status in
		full)
			st="="
			;;
		discharging)
			st="-"
			;;
		charging)
			st="+"
			;;
	esac
	echo $st$bat_perc
}
cpu()
{
  iostat -w 1 -c 2 -n 1 | tail -1 | awk '{usage=100-$6} END {printf("%d",usage)}';
}
ram()
{
  top -l 1 | grep PhysMem: | awk '{print int($2/($2 + $6) * 100.0)}'
}
clock()
{
	mtime=$(date +'%H:%M')
	myear=$(date +'%Y-%m-')
	mday=$(date +'%d')
	echo "#[fg=$C5]#[bg=$C4] $mtime #[fg=$C6]$myear#[fg=$C5]$mday #[fg=$C6]$EOL"
}
front()
{
	echo "#[bg=$C7]#[fg=$C1]▓░"
}
CPU_INFO=`cpu`
RAM_INFO=`ram`
echo `front` `bat` `draw $RAM_INFO 4` `temp` `draw $CPU_INFO 10` `clock`
