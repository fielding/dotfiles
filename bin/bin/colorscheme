#!/bin/bash
#   Base24 color scheme matrix
#   Shows all 24 foreground colors against 8 background colors
#
#   Requires shell-init.sh to have remapped 256-color slots 16-23.

T='▆ ▆'   # The test text

# Foreground escape codes for all 24 base24 colors
# Format: "label code"
FG_CODES=(
  "   30m:0;30"         # base00 bg
  " 38;18:38;5;18"      # base01 elevation
  " 38;19:38;5;19"      # base02 selection
  "   90m:0;90"         # base03 comments
  " 38;20:38;5;20"      # base04 secondary
  " 38;21:38;5;21"      # base05 main text
  "   37m:0;37"         # base06 emphasis
  "   97m:0;97"         # base07 brightest
  "   31m:0;31"         # base08 pink
  " 38;16:38;5;16"      # base09 orange
  "   33m:0;33"         # base0A amber
  "   32m:0;32"         # base0B green
  "   36m:0;36"         # base0C cyan
  "   34m:0;34"         # base0D blue
  "   35m:0;35"         # base0E purple
  " 38;17:38;5;17"      # base0F lime
  "   91m:0;91"         # base10 q.pink
  " 38;22:38;5;22"      # base11 q.orange
  "   93m:0;93"         # base12 q.yellow
  "   92m:0;92"         # base13 q.green
  "   96m:0;96"         # base14 q.cyan
  "   94m:0;94"         # base15 q.blue
  "   95m:0;95"         # base16 q.purple
  " 38;23:38;5;23"      # base17 q.lime
)

# Background codes (8 LOUD accents)
BG_LABELS="   40m     41m     42m     43m     44m     45m     46m     47m"
BG_CODES=(40 41 42 43 44 45 46 47)

echo -e "\n                 ${BG_LABELS}"

for entry in "${FG_CODES[@]}"; do
  label="${entry%%:*}"
  code="${entry##*:}"
  echo -en " ${label} \033[${code}m  ${T}  "
  for bg in "${BG_CODES[@]}"; do
    echo -en " \033[${code}m\033[${bg}m  ${T}  \033[0m"
  done
  echo
done
echo
