#!/bin/bash
#
#  ┳━┓┳━┓0┏┓┓┳━┓┏━┓┓ ┳
#  ┃┳┛┃━┫┃┃┃┃┃━┃┃ ┃┃┃┃
#  ┃┗┛┛ ┃┃┃┗┛┻━┛┛━┛┗┻┛
#     ┳━┓┳ ┓┳┏ ┳━┓
#     ┃━┛┃ ┃┣┻┓┣━
#     ┇  ┗━┛┃ ┛┻━┛
#
# base24 rainbow puke (8 LOUD accents)
# by xero <http://0w.nz>
#  adapted by fielding
#  <justfielding.com>
#
# Uses proper escape sequences for all 8 LOUD base24 accents:
#   base08=\e[31m  base09=\e[38;5;16m  base0A=\e[33m  base0B=\e[32m
#   base0C=\e[36m  base0D=\e[34m       base0E=\e[35m  base0F=\e[38;5;17m

# 8 LOUD accent escape codes (ANSI-C quoting for real escape bytes)
R=$'\033[31m'       # base08 pink
O=$'\033[38;5;16m'  # base09 orange
Y=$'\033[33m'       # base0A amber
G=$'\033[32m'       # base0B green
C=$'\033[36m'       # base0C cyan
B=$'\033[34m'       # base0D blue
P=$'\033[35m'       # base0E purple
L=$'\033[38;5;17m'  # base0F lime
X=$'\033[0m'        # reset

# Block character
b='XXXXXX'

i=0
while [ "$i" -lt 100 ]; do
  printf "   ${R}${b}${O}${b}${Y}${b}${G}${b}${C}${b}${B}${b}${P}${b}${L}${b}${X}\n"
  i=$((i + 1))
done
