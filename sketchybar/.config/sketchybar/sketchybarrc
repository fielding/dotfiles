#!/bin/bash

# ┌──────────────────────────────────────────────────────────────────────────┐
# │ Sketchybar Config                                                        │
# │ Minimal, sleek bar matching JankyBorders/skhd color scheme               │
# └──────────────────────────────────────────────────────────────────────────┘

PLUGIN_DIR="$CONFIG_DIR/plugins"
ITEM_DIR="$CONFIG_DIR/items"

# ─────────────────────────────────────────────────────────────────────────────
# Color Palette (Monokai Pro base + vibrant border accents)
# ─────────────────────────────────────────────────────────────────────────────
export COLOR_BG=0xff2d2a2e           # monokai bg
export COLOR_BG_LIGHT=0xff3a383a     # monokai-ish pill bg
export COLOR_FG=0xfffcfcfa           # monokai fg
export COLOR_FG_DIM=0xff727072       # monokai comment
export COLOR_ACCENT=0xffff0074       # hot pink - default (replaces monokai red)
export COLOR_MINT=0xff6bffb8         # mint - switcher (replaces monokai green)
export COLOR_CYAN=0xff5ce1ff         # electric blue - swap (replaces monokai cyan)
export COLOR_ORANGE=0xffffb86c       # amber - tree (replaces monokai yellow)
export COLOR_PURPLE=0xffbd93f9       # lavender - layout (replaces monokai magenta)
export COLOR_RED=0xffff5555          # red - meet
export COLOR_TRANSPARENT=0x00000000

# ─────────────────────────────────────────────────────────────────────────────
# Bar Appearance
# ─────────────────────────────────────────────────────────────────────────────
bar=(
  height=36
  color=$COLOR_BG
  border_width=0
  shadow=off
  position=top
  sticky=on
  padding_right=8
  padding_left=8
  y_offset=4
  margin=8
  corner_radius=10
  blur_radius=20
  notch_width=200
)
sketchybar --bar "${bar[@]}"

# ─────────────────────────────────────────────────────────────────────────────
# Default Item Styling
# ─────────────────────────────────────────────────────────────────────────────
defaults=(
  icon.font="SF Pro:Semibold:14.0"
  icon.color=$COLOR_FG
  icon.padding_left=8
  icon.padding_right=4
  label.font="SF Mono:Medium:12.0"
  label.color=$COLOR_FG
  label.padding_left=4
  label.padding_right=8
  background.color=$COLOR_BG_LIGHT
  background.corner_radius=6
  background.height=26
  background.padding_left=4
  background.padding_right=4
)
sketchybar --default "${defaults[@]}"

# ─────────────────────────────────────────────────────────────────────────────
# Events
# ─────────────────────────────────────────────────────────────────────────────
sketchybar --add event mode_change
sketchybar --add event volume_change

# ─────────────────────────────────────────────────────────────────────────────
# Items
# ─────────────────────────────────────────────────────────────────────────────

# Left side
source "$ITEM_DIR/spaces.sh"
source "$ITEM_DIR/front_app.sh"

# Right side (order: rightmost first, like macOS menubar)
source "$ITEM_DIR/clock.sh"
source "$ITEM_DIR/battery.sh"
source "$ITEM_DIR/wifi.sh"
source "$ITEM_DIR/bluetooth.sh"
source "$ITEM_DIR/volume.sh"
source "$ITEM_DIR/mic.sh"
source "$ITEM_DIR/weather.sh"
source "$ITEM_DIR/calendar.sh"
source "$ITEM_DIR/mode.sh"

# ─────────────────────────────────────────────────────────────────────────────
# Finalize
# ─────────────────────────────────────────────────────────────────────────────
sketchybar --update
