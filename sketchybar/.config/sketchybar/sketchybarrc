#!/bin/bash

# ┌──────────────────────────────────────────────────────────────────────────┐
# │ Sketchybar Config                                                        │
# │ Minimal, sleek bar matching JankyBorders/skhd color scheme               │
# └──────────────────────────────────────────────────────────────────────────┘

PLUGIN_DIR="$CONFIG_DIR/plugins"
ITEM_DIR="$CONFIG_DIR/items"

# ─────────────────────────────────────────────────────────────────────────────
# Color Palette - sourced from external theme file
# Use theme-switch to change themes: ~/src/hack/colors/theme-switch <theme>
# ─────────────────────────────────────────────────────────────────────────────
source "$CONFIG_DIR/colors.sh"
sketchybar --load-font "$HOME/Library/Fonts/sketchybar-app-font.ttf"

# ─────────────────────────────────────────────────────────────────────────────
# Bar Appearance
# ─────────────────────────────────────────────────────────────────────────────
bar=(
  height=40
  color=$COLOR_BG
  border_width=0
  border_color=$COLOR_FG
  shadow=off
  position=top
  sticky=on
  padding_right=6
  padding_left=6
  y_offset=4
  margin=6
  corner_radius=0
  blur_radius=0
  notch_width=200
)
sketchybar --bar "${bar[@]}"

# ─────────────────────────────────────────────────────────────────────────────
# Default Item Styling (BRUTALIST)
# ─────────────────────────────────────────────────────────────────────────────
defaults=(
  icon.font="Hack Nerd Font:Bold:16.0"
  icon.color=$COLOR_FG
  icon.padding_left=12
  icon.padding_right=6
  label.font="Inconsolata Nerd Font:Bold:14.0"
  label.color=$COLOR_FG
  label.padding_left=6
  label.padding_right=12
  background.color=$COLOR_TRANSPARENT
  background.corner_radius=0
  background.height=30
  background.padding_left=0
  background.padding_right=0
)
sketchybar --default "${defaults[@]}"

# ─────────────────────────────────────────────────────────────────────────────
# Events
# ─────────────────────────────────────────────────────────────────────────────
sketchybar --add event mode_change
sketchybar --add event volume_change
sketchybar --add event keybind_flash

# ─────────────────────────────────────────────────────────────────────────────
# Items
# ─────────────────────────────────────────────────────────────────────────────

# Left side
source "$ITEM_DIR/spaces.sh"
source "$ITEM_DIR/front_app.sh"

# Right side (order: rightmost first, like macOS menubar)
# Groups: [mode] [calendar weather] [bluetooth wifi] [mic volume] [battery clock]
source "$ITEM_DIR/clock.sh"
source "$ITEM_DIR/battery.sh"
source "$ITEM_DIR/volume.sh"
source "$ITEM_DIR/mic.sh"
source "$ITEM_DIR/wifi.sh"
source "$ITEM_DIR/bluetooth.sh"
source "$ITEM_DIR/weather.sh"
source "$ITEM_DIR/calendar.sh"
source "$ITEM_DIR/thinktax.sh"
source "$ITEM_DIR/mode.sh"
source "$ITEM_DIR/flash.sh"

# ─────────────────────────────────────────────────────────────────────────────
# Tray Bracket - Unified background for right side items
# ─────────────────────────────────────────────────────────────────────────────
sketchybar --add bracket tray mode thinktax calendar weather bluetooth wifi mic volume battery clock \
           --set tray background.color=$COLOR_BG_LIGHT \
                      background.corner_radius=0 \
                      background.height=32

# ─────────────────────────────────────────────────────────────────────────────
# Finalize
# ─────────────────────────────────────────────────────────────────────────────
sketchybar --update
